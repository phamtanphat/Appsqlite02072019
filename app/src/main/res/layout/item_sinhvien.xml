<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textStyle="bold"
        android:textColor="#F44336"
        android:textSize="20sp"
        android:text="Tên sinh viên"
        android:id="@+id/textviewTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/textviewTen"
        android:textStyle="bold"
        android:textColor="#BEF44336"
        android:textSize="20sp"
        android:text="Địa chỉ"
        android:id="@+id/textviewDiachi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/textviewDiachi"
        android:textStyle="bold"
        android:textColor="#131212"
        android:textSize="20sp"
        android:text="Nam sinh"
        android:id="@+id/textviewNamsinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Xóa"
        android:id="@+id/buttonXoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:background="#0C0C0C"
        android:layout_marginTop="3dp"
        android:layout_below="@id/textviewNamsinh"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>